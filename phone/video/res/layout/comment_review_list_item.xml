<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comment_review_item_user_top_margin"
        android:layout_marginLeft="@dimen/video_common_interval_30"
        android:layout_marginRight="@dimen/video_common_interval_30"
        android:orientation="horizontal">
        <TextView
	        android:id="@+id/comment_review_list_user"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/app_name"
	        android:textColor="@color/p_50_black"
	        android:textSize="@dimen/font_size_42"/>
        <com.miui.video.widget.RatingView
	        android:id="@+id/comment_review_list_rating"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="@dimen/comment_review_item_rate_left_margin"
	        android:layout_gravity="center_vertical" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/video_common_interval_30"
        android:layout_marginRight="@dimen/video_common_interval_30"
        android:orientation="vertical">
         <TextView
	        android:id="@+id/comment_review_list_comment"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/comment_review_item_comment_top_margin"
	        android:text="@string/app_name"
	        android:textColor="@color/p_80_black"
	        android:textSize="@dimen/font_size_42"/>
        <View
		    android:id="@+id/comment_review_list_divider"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/video_common_divider_height"
		    android:layout_marginTop="@dimen/comment_review_item_divider_top_margin"
		    android:background="@drawable/com_10_black" />
    </LinearLayout>
</FrameLayout>