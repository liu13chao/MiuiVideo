<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="@dimen/detail_scroll_item_title_height"
        android:layout_marginLeft="@dimen/video_common_interval_30"
        android:layout_marginRight="@dimen/video_common_interval_30">

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:paddingBottom="@dimen/size_6"
	        android:text="@string/introduce"
	        android:textColor="@color/orange"
	        android:textSize="@dimen/font_size_42" />

	    <ImageView
	        android:id="@+id/detail_introduce_arrow" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="@dimen/video_common_interval_30"
	        android:paddingTop="@dimen/video_common_interval_30"
	        android:paddingBottom="@dimen/video_common_interval_30"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/transparent"
	        android:src="@drawable/arrow_extend"/>        
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_common_divider_height"
        android:layout_marginLeft="@dimen/video_common_interval_30"
        android:layout_marginRight="@dimen/video_common_interval_30"
        android:background="@drawable/com_10_black" />    
    <TextView 
        android:id="@+id/detail_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/video_common_interval_30"
        android:layout_marginRight="@dimen/video_common_interval_30"
        android:layout_marginTop="@dimen/video_common_interval_30"
        android:layout_marginBottom="@dimen/video_common_interval_50"  
        android:lineSpacingExtra="@dimen/detail_introduce_line_space"
        android:ellipsize="end"
        android:text="@string/app_name"
        android:textSize="@dimen/font_size_42"
        android:textColor="@color/p_80_black"/>
</LinearLayout>